{
  "expo": {
    "name": "Entregador",
    "slug": "entregador",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/ios-light.png",
    "userInterfaceStyle": "light",
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#00439A"
    },
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/adaptive-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00439A"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/ios-light.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Permita que o Entregador acesse sua localização para mostrar sua posição no mapa."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00439A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.entregador",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "SUA_CHAVE_GOOGLE_MAPS_AQUI"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-dev-client"
      ],
      [
        "expo-maps",
        {
          "requestLocationPermission": true,
          "locationPermission": "Permita que o Entregador use sua localização para exibir o mapa"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ca0f3a90-7d85-46b1-8d9f-13ffa3c2ae04"
      }
    },
    "owner": "thiago_morgado"
  }
}